<resources>
    <style name="Base.Theme.PCMonitor" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item> <!-- Отключить дефолтный бар -->
        <item name="windowNoTitle">true</item> <!-- Убрать статус сверху -->
        <item name="android:windowFullscreen">true</item> <!-- Фулл экран -->

        <item name="backgroundColor">#160e29</item> <!-- Фон -->
        <item name="colorOnBackground">#ffffff</item> <!-- Категория + спиннер текст -->

        <item name="colorCategory">#c4c1c9</item> <!-- Элементы категории -->
        <item name="colorSpinnerBackground">#1f133d</item> <!-- Фон спиннера -->
        <item name="colorSpinnerOutline">#1f133d</item> <!-- Обводка спиннера -->

        <item name="colorPrimary">#1b1133</item> <!-- Цвет фона тулбара -->
        <item name="colorOnPrimary">#ffffff</item> <!-- Цвет иконок и текста тулбара -->

        <item name="colorButtonBackground">?colorSpinnerBackground</item> <!-- Цвет кнопки -->
        <item name="ViewColor">#dedede</item> <!-- Цвет разделителей -->
    </style>

</resources>